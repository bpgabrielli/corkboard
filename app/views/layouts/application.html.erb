<!DOCTYPE html>
<html>
<head>
  <title>Corkboard</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <ul class="nav nav-tabs">
      <li><%= link_to "Corkboard", root_path %></li>

           <% if current_user %>
              <li><%= link_to current_user do %><%= current_user.name %>'s Board<% end %></li>
              <li class="right-header"><%= link_to current_user.email, edit_user_registration_path %></li>
           <% else %>
            <div class="pull-right user-info">
             <%= link_to "Sign In", new_user_session_path %> or 
             <%= link_to "Sign Up", new_user_registration_path %>
            </div>
           <% end %>
    </ul>

       <% if flash[:notice] %>
         <div class="alert alert-success">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:notice] %>
         </div>
       <% elsif flash[:error] %>
         <div class="alert alert-danger">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:error] %>
         </div>
       <% elsif flash[:alert] %>
         <div class="alert alert-warning">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:alert] %>
         </div>
       <% end %>

<%= yield %>
</div>
</body>

  <div class="container">
    <footer class="footer">
      <p>&copy; Bruno Gabrielli 2015</p>
    </footer>
  </div>

</html>
