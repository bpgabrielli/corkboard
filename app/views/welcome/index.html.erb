<div class="jumbotron">
  <h1>Corkboard</h1>
  <p>Social Bookmarking with Email Integration</p>
  <p>
     <% if current_user %>
      <div class="header-form">
        <%= render partial: 'bookmarks/form', locals: { bookmark: @bookmark } %>
      </div>
     <% else %>
      <%= link_to "Sign In", new_user_session_path, class: 'btn btn-primary' %> or 
      <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-primary' %>
     <% end %>
  </p>
</div>

<%= render partial: 'topics/topics', locals: { topics: @topics } %>
