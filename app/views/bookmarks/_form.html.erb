<%= form_for [bookmark], do |f| %>
  <div class="form-group">
    <%= f.text_field :url, rows: 1, cols: 10, class: 'form-control', placeholder: "Paste link" %>
  </div>
  <div class="form-group">
    <%= f.text_field :topic_name, rows: 1, cols: 10, class: 'form-control', placeholder: "#topic" %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", class: 'btn btn-success' %>
  </div>
<% end %>