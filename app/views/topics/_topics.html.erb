
<div class="row">
  <div>
    <% topics.each do |topic| %>
          <div class="media">
            <div class="media-body">
              <h4 class="media-heading">
                <%= link_to topic.name, topic %></h4>
                  <div class="row">
                    <div>
                      <%= render partial: 'bookmarks/bookmarks', locals: { bookmarks: topic.bookmarks } %>
                    </div>
                  </div>
              </div>
          </div>
    <% end %>
    <%= will_paginate topics %>
  </div>
</div>